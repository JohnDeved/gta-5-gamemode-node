<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link rel="stylesheet" href="/ui/semantic.min.css" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body style="background: <%=background %>">
    <div class="ui basic modal">
        <div class="ui icon header">
            <i class="<%=icon %>"></i> <%=title %>
        </div>
        <div class="content">
            <p style="text-align: center">
                <% for (var i = 0; i < text.length; i++) { %>
                    <%=text[i] %><br>
                <% } %>
            </p>
        </div>
        <div class="actions">
            <div id="no" class="ui red basic cancel inverted button">
                <i class="remove icon"></i> Nein
            </div>
            <div id="yes" class="ui green ok inverted button">
                <i class="checkmark icon"></i> Ja
            </div>
        </div>
    </div>
    <!-- JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="/ui/semantic.min.js"></script>
    <script src="/javascripts/modal.js"></script>
    <% include templates/request.ejs %>
</body>

</html>
